function rhsVar = Convection2DRHS(mesh, var, time, Speed)
% 2D convection problem
% Righ Hand sides

tri = mesh.Shape;

Fs = ConvectionLF(mesh, var);
Fs = BoundaryCondition(Fs, time)

[F, G] = ConvectionFlux(var(mesh.vmapM), Speed);

dF = (F.*mesh.nx + G.*mesh.ny) - Fs;

rhsVar = -( mesh.rx.*(tri.Dr*F) + mesh.sx.*(tri.Ds*F) ...
    + mesh.ry.*(tri.Dr*G) + mesh.sy.*(tri.Ds*G) ) ...
    + tri.invM*(tri.Mes*(dF.*mesh.fScal));
end% func

function [F,G] = ConvectionFlux(var, Speed)
% Cal flux
% F = u*c; G = v*c
F = var*Speed(1); G = var*Speed(2);
end% func